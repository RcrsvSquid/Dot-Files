[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = "Sidneyw"
	email = sidney.wijngaarde1@ibm.com
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[push]
	default = current
[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
    cane = commit --amend --no-edit
    cmp = "!f() { git checkout master && git pull; }; f"
    nuke = "!f() { git push origin --delete $1; git branch -D $1; }; f"
    pr = "!f() { git fetch upstream refs/pull/$1/head:refs/remotes/upstream/pr/$1 && git checkout FETCH_HEAD && git remote prune upstream; }; f"
[core]
	editor = /usr/local/bin/nvim
	excludesfile = ~/.gitignore
