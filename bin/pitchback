#!/bin/bash

openLinks=false

function _help ()
{
	echo "pitchback [-b]"
	echo "set up pitchback dev environment"
}

function browser ()
{
	open -a /Applications/Google\ Chrome.app "http://localhost:3000" \
		"https://github.com/RcrsvSquid/pitchback-frontend" \
		"https://travis-ci.com/" \
		"https://dashboard.heroku.com/apps/pitchback" \
		"http://www.material-ui.com/#/components/app-bar" \
		"https://console.aws.amazon.com/s3/home?region=us-east-1"
}

while getopts ":hb" option; do 
	case $option in 
		b)  openLinks=true;;
		h)  _help; exit 0;;

		\?) _help; exit 0;;
	esac
done

cd ~/Desktop/Pitchback/pitchback-frontend
session_name="Pitchback"
tmux new -s ${session_name} -d
tmux send-keys -t ${session_name} "tmux source-file ~/.dot_files/tmux/pitchback.conf" C-m

if  $openLinks; then
	browser
fi

tmux attach -t ${session_name}
